{
  "name": "pdi",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node -r dotenv/config dist/main",
    "dev": "nodemon --watch 'src/' --exec 'ts-node src/main' -e ts",
    "up": "npm run build && docker-compose up -d --build",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "down": "docker-compose down",
    "up:redis": "docker-compose up -d redis",
    "test": "npm run up:redis && jest --runInBand --passWithNoTests --silent --noStackTrace --forceExit",
    "test:verbose": "npm run up:redis && jest --runInBand --passWithNoTests",
    "test:unit": "npm test -- --watch -c ./jest.unit.config.js",
    "test:integration": "npm test -- --watch -c ./jest.integration.config.js",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/ioredis": "^4.28.7",
    "@types/jest": "^27.0.3",
    "@types/pg": "^8.6.3",
    "@types/supertest": "^2.0.11",
    "eslint": "^7.32.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-standard": "^5.0.0",
    "git-commit-msg-linter": "^4.0.7",
    "jest": "^27.4.5",
    "jest-mock-extended": "^2.0.4",
    "nodemon": "^2.0.15",
    "pg-mem": "1.9.17",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "express": "^4.17.2",
    "husky": "^7.0.4",
    "ioredis": "^4.28.2",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "0.2.29"
  }
}
